</p>
<table>
    <tr>
        <th>
            Project
        </th>
        <th>
            title
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Project.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
