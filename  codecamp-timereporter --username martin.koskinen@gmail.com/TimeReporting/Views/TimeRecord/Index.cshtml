@model TimeReporting.Models.TimeRecord

@{
    ViewBag.Title = "Time Reporting";
}

<h2>Time Reporting</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Report Time</legend>
        <table>
        <tr>
        <td class="editor-label">
                @Html.LabelFor(model => model.projectID)
        </td>
        <td class="editor-label">
                @Html.LabelFor(model => model.activityID)
        </td>
        <td class="editor-label">
                @Html.LabelFor(model => model.minutes)
        </td>
        <td class="editor-label">
                @Html.LabelFor(model => model.comment)
        </td>
        <td class="editor-label">
                @Html.LabelFor(model => model.date)
        </td>
        </tr>
        <tr>
        <td class="editor-field">
                @Html.TextBoxFor(m => m.projectID)
                @Html.ValidationMessageFor(m => m.projectID)
        </td>
        <td class="editor-field">
                @Html.TextBoxFor(m => m.activityID)
                @Html.ValidationMessageFor(m => m.activityID)
        </td>
        <td class="editor-field">
                @Html.TextBoxFor(m => m.minutes)
                @Html.ValidationMessageFor(m => m.minutes)
        </td>
        <td class="editor-field">
                @Html.TextBoxFor(m => m.comment)
                @Html.ValidationMessageFor(m => m.comment)
        </td>
        <td class="editor-field">
                @Html.TextBoxFor(m => m.date)
                @Html.ValidationMessageFor(m => m.date)
        </td>
        </tr>
        </table>
        <p>
            <a href="#" class="addMore">+Add More Projects</a>
            <input type="submit" value="Submit" name="Index" />
        </p>
    </fieldset>
}
<ul class="projects"> 
@foreach (var pId in ViewBag.Tprojects)
{
<li class="@pId.Value">@pId.Text</li>
}
</ul>

<script>
$(function () {
        $("#date").datepicker();
});
</script>
         

