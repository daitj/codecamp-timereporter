@model TimeReporting.Models.TimeRecord

@{
    ViewBag.Title = "Time Record";
}

<h2>Time Record @DateTime.Now</h2>

<style>
    div.container
    {
        display:inline-block;
        width:100%;
    }
div.frames
{
    width:100%;
    padding-right:20px;
}

div.frames iframe
{
    border:none;
    width:100%;
    height:100px;
}
</style>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="container">
<div id="addFrame" class="frames">
<iframe scrolling="no" id="frame_1" src="TimeRecord/IndexFrame"></iframe>
</div>

<input type="submit" value="Add Projects" id="addFrameButton" />

<script type="text/javascript">
    $(document).ready(function () {
        $('input#addFrameButton').click(function (e) {
            e.preventDefault();
            $('div#addFrame').append('<iframe scrolling="no" id="frame_1" src="TimeRecord/IndexFrame"></iframe>');
        });
    });
</script>
