@model TimeReporting.Models.Chat

@{
    ViewBag.Title = "Delete";
}

@if (ViewBag.error == null)
{
<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Chat</legend>
    <div class="display-label"><b>Message To be Deleted</b></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.chatMsg)
    </div>

    <div class="display-label"><b>Message Time</b></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.timeStamp)
    </div>
</fieldset>
using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
}
else
{
    <p>You cannot delete others message. </p>
    <input type="button" value="Go Back" onclick="javascript:history.go(-1)" />
}